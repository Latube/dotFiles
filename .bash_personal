

#!/bin/bash

# set manual highlight
export LESS_TERMCAP_mb=$'\e[1;32m'
export LESS_TERMCAP_md=$'\e[1;32m'
export LESS_TERMCAP_me=$'\e[0m'
export LESS_TERMCAP_se=$'\e[0m'
export LESS_TERMCAP_so=$'\e[01;33m'
export LESS_TERMCAP_ue=$'\e[0m'
export LESS_TERMCAP_us=$'\e[1;4;31m'

OS=$(uname)

# file
alias cp='cp -i'
alias rm='rm -i'
alias mv='mv -i'

# directory
alias l='ls -l'
alias t1='tree -aL 1'
alias t2='tree -aL 2'
alias z='cd'
alias md='mkdir'

# git
alias ga='git add'
alias gc='git commit'
alias gl='git pull'
alias gp='git push'
alias gst='git status'

# other
alias vi='vim'
alias cls='clear'

# functions


if [ $OS = "Darwin" ]; then
# MACOS
	alias zw='z ~/Documents/wspace'
	alias la='ls -FsAilhT'
else
# WSL
	alias zw='z /mnt/d/Users/PC-TT/wspace'
	alias cdc='cd /mnt/c'
	alias cdd='cd /mnt/d'
	alias cdg='cd /mnt/g'
	alias la='ls -FsAilh --time-style=long-iso'
	
fi
