#!/bin/bash

OS=$(uname)

alias cls='clear'
alias cp='cp -i'
alias rm='rm -i'
alias mv='mv -i'

alias l='ls -l'
alias la='ls -Fsailh'

alias z='cd'
alias t1='tree -aL 1'
alias t2='tree -aL 2'
alias vi='vim'



if [ $OS = "Darwin" ]; then
# MACOS
	alias zw='z ~/Documents/wspace'
else
# WINLinux
	alias zw='z /mnt/d/Users/PC-TT/wspace'
	alias cdc='cd /mnt/c'
	alias cdd='cd /mnt/d'
	alias cdg='cd /mnt/g'
	
fi
