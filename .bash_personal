#!/bin/bash

OS=$(uname)

# file
alias cp='cp -i'
alias rm='rm -i'
alias mv='mv -i'

# directory
alias l='ls -l'
alias la='ls -Fsailh --time-style=long-iso'
alias t1='tree -aL 1'
alias t2='tree -aL 2'
alias z='cd'
alias md='mkdir'

# other
alias vi='vim'
alias cls='clear'

# functions


if [ $OS = "Darwin" ]; then
# MACOS
	alias zw='z ~/Documents/wspace'
else
# WINLinux
	alias zw='z /mnt/d/Users/PC-TT/wspace'
	alias cdc='cd /mnt/c'
	alias cdd='cd /mnt/d'
	alias cdg='cd /mnt/g'
	
fi
